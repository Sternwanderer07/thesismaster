<?xml version="1.0" encoding="utf-8"?>


    <RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_background"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <include
        android:id="@+id/toolbartheme"
        layout="@layout/toolbar_back"
        ></include>
    <TextView
        android:id="@+id/themeText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/marine"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/toolbartheme"
        android:textSize="20sp"
        android:text="Abschlussarbeit"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/themeText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/grey_700"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="32dp"
        android:layout_below="@id/themeText1"
        android:textSize="16sp"
        android:textAlignment="center"
        android:text="Viel Erfolg"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btntheme1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/themeText2"
        android:layout_marginHorizontal="16dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        style="@style/RoundButton"
        android:paddingStart="8dp"
        android:text="Struktur der Arbeit" />

    <Button
        android:id="@+id/btntheme2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/btntheme1"
        android:paddingStart="8dp"
        style="@style/RoundButton"

        android:text="Methodisches Vorgehen der Arbeit"/>
    <Button
        android:id="@+id/btntheme3"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/btntheme2"
        android:paddingStart="8dp"
        style="@style/RoundButton"

        android:text="Schlussfolgerung und Mehrwert"/>

</RelativeLayout>
